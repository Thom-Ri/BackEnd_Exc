<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>Document</title>
    <script>
        function mostrar(){
            let form = document.getElementById("FormInvisible")
            form.style.display = "block";
        }
    </script>
</head>
<body>
    <header>
        <%- include('../partials/header.ejs') -%>
    </header>
    <h2>Tus Carritos</h2>
    <%if(CartContainer.length > 0){ CartContainer.map(cart => {%>
        <a href="/api/carrito/<%-cart.id-%>/productos">
            <div class="card" style="width: 18rem;">
                <img src="..." class="card-img-top" alt="IMAGEN DE CARRITO">
                <div class="card-body">
                    <h5 class="card-title"><%-cart.id-%></h5>
                    <p class="card-text"><%-cart.Creation-%></p>
                </div>
                <div class="card-body">
                    <a href="#" class="card-link">Borrar</a>
                </div>
            </div>
        </a>
    <% })}else{%>
        <h3>Usted no tiene ningun carrito actualmente :(</h3>
    <%};%>

    <button onclick="mostrar()">Agregar Carrito</button>

    <div id="FormInvisible" style="display:none">
        <form method="post" action="">
            <label for="exampleInputPassword1" class="form-label">Nombre</label>
            <input type="text" name="userName" class="form-control" id="exampleInputPassword1">

            <button type="submit" class="btn btn-primary">Crear</button>   
        </form>
    </div>
    
</body>
</html>